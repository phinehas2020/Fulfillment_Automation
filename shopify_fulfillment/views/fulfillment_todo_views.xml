<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_fulfillment_todo_tree" model="ir.ui.view">
        <field name="name">fulfillment.todo.list</field>
        <field name="model">fulfillment.todo</field>
        <field name="arch" type="xml">
            <list decoration-info="state == 'pending'" decoration-success="state == 'completed'" decoration-muted="state == 'cancel'">
                <field name="name"/>
                <field name="order_id"/>
                <field name="user_id"/>
                <field name="state" widget="badge" decoration-info="state == 'pending'" decoration-success="state == 'completed'"/>
                <field name="date_completed"/>
            </list>
        </field>
    </record>

    <record id="view_fulfillment_todo_form" model="ir.ui.view">
        <field name="name">fulfillment.todo.form</field>
        <field name="model">fulfillment.todo</field>
        <field name="arch" type="xml">
            <form string="Fulfillment To-Do">
                <header>
                    <button name="action_complete" type="object" string="Complete &amp; Update Inventory" class="oe_highlight" invisible="state != 'pending'"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state != 'pending'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="order_id"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="date_completed" invisible="not date_completed"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Items to Pack">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="sku" readonly="1"/>
                                    <field name="title" readonly="1"/>
                                    <field name="quantity" readonly="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_fulfillment_todo_action" model="ir.actions.act_window">
        <field name="name">Fulfillment To-Dos</field>
        <field name="res_model">fulfillment.todo</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No fulfillment tasks yet!
            </p>
            <p>
                Tasks are created automatically when labels are printed.
            </p>
        </field>
    </record>
</odoo>
