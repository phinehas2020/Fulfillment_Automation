<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_shippo_recent_transaction_tree" model="ir.ui.view">
        <field name="name">shippo.recent.transaction.list</field>
        <field name="model">shippo.recent.transaction</field>
        <field name="arch" type="xml">
            <list create="false" edit="false" delete="false">
                <button name="action_reprint_label" type="object" string="Reprint" icon="fa-print"/>
                <field name="transaction_date"/>
                <field name="tracking_number"/>
                <field name="carrier"/>
                <field name="service"/>
                <field name="status" widget="badge"/>
                <field name="order_id"/>
                <field name="has_local_zpl"/>
            </list>
        </field>
    </record>

    <record id="view_shippo_recent_transaction_form" model="ir.ui.view">
        <field name="name">shippo.recent.transaction.form</field>
        <field name="model">shippo.recent.transaction</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" delete="false">
                <header>
                    <button name="action_reprint_label" type="object" string="Reprint Label" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="transaction_date"/>
                            <field name="shippo_object_id"/>
                            <field name="status"/>
                            <field name="label_file_type"/>
                        </group>
                        <group>
                            <field name="carrier"/>
                            <field name="service"/>
                            <field name="tracking_number"/>
                            <field name="has_local_zpl"/>
                        </group>
                    </group>
                    <group>
                        <field name="tracking_url" widget="url"/>
                        <field name="label_url" widget="url"/>
                    </group>
                    <group>
                        <field name="local_shipment_id"/>
                        <field name="order_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_recent_shipments" model="ir.actions.act_window">
        <field name="name">Recent Shipments</field>
        <field name="res_model">shippo.recent.transaction</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_fetch_recent_shipments" model="ir.actions.server">
        <field name="name">Recent Shipments</field>
        <field name="model_id" ref="model_shippo_recent_transaction"/>
        <field name="state">code</field>
        <field name="code">
            action = env['shippo.recent.transaction'].action_fetch_recent()
        </field>
    </record>
</odoo>
