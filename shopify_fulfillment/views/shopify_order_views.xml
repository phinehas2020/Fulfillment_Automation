<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_shopify_order_tree" model="ir.ui.view">
        <field name="name">shopify.order.list</field>
        <field name="model">shopify.order</field>
        <field name="arch" type="xml">
            <list>
                <header>
                    <button name="action_import_from_shopify" type="object" string="Sync Orders from Shopify" class="btn-primary"/>
                </header>
                <field name="order_name"/>
                <field name="order_number"/>
                <field name="customer_name"/>
                <field name="state"/>
                <field name="source"/>
                <field name="total_items"/>
                <field name="total_weight"/>
                <field name="created_at"/>
            </list>
        </field>
    </record>

    <record id="view_shopify_order_form" model="ir.ui.view">
        <field name="name">shopify.order.form</field>
        <field name="model">shopify.order</field>
        <field name="arch" type="xml">
            <form string="Shopify Order">
                <header>
                    <button name="action_process" type="object" string="Process" invisible="state not in ('pending', 'error', 'manual_required')"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="alert alert-danger" role="alert" invisible="not error_message">
                        <field name="error_message"/>
                    </div>
                    <group>
                        <field name="order_name"/>
                        <field name="order_number"/>
                        <field name="shopify_id" readonly="1"/>
                        <field name="shopify_risk_level" widget="badge" decoration-danger="shopify_risk_level == 'HIGH'" decoration-warning="shopify_risk_level == 'MEDIUM'" decoration-success="shopify_risk_level == 'LOW'"/>
                        <field name="source"/>
                        <field name="created_at"/>
                    </group>
                    <group string="Shipping">
                        <field name="requested_shipping_method"/>
                        <field name="customer_name"/>
                        <field name="shipping_phone"/>
                        <field name="shipping_address_line1"/>
                        <field name="shipping_address_line2"/>
                        <field name="shipping_city"/>
                        <field name="shipping_state"/>
                        <field name="shipping_zip"/>
                        <field name="shipping_country"/>
                    </group>
                    <notebook>
                        <page string="Lines">
                            <field name="line_ids" context="{'tree_view_ref': 'shopify_fulfillment.view_shopify_order_line_inline_tree'}"/>
                        </page>
                        <page string="Shipment">
                            <group>
                                <field name="box_id"/>
                                <field name="shipment_id" readonly="1"/>
                            </group>
                        </page>
                        <page string="Print Jobs">
                            <field name="print_job_ids" context="{'tree_view_ref': 'shopify_fulfillment.view_print_job_tree'}"/>
                        </page>
                        <page string="Inventory Status" name="inventory_status">
                            <group>
                                <group>
                                    <field name="inventory_deducted" widget="boolean_toggle" readonly="1"/>
                                </group>
                                <group>
                                    <button name="action_create_fulfillment_task" 
                                            type="object" 
                                            string="Generate Packing Task" 
                                            class="btn-primary"
                                            invisible="fulfillment_task_ids"/>
                                    <button name="action_manual_inventory_deduction" 
                                            type="object" 
                                            string="Deduct Inventory Now" 
                                            class="oe_highlight"
                                            invisible="inventory_deducted"/>
                                </group>
                            </group>
                            <separator string="Fulfillment Tasks"/>
                            <field name="fulfillment_task_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="user_ids" widget="many2many_tags"/>
                                    <field name="state"/>
                                    <field name="fulfillment_inventory_deducted" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>
                        <page string="Raw Payload">
                            <field name="raw_payload" nolabel="1" readonly="1"/>
                        </page>
                        <page string="Errors">
                            <field name="error_message" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_shopify_order_action" model="ir.actions.act_window">
        <field name="name">Shopify Orders</field>
        <field name="res_model">shopify.order</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_sync_shopify_status_server" model="ir.actions.server">
        <field name="name">Sync Status from Shopify</field>
        <field name="model_id" ref="model_shopify_order"/>
        <field name="binding_model_id" ref="model_shopify_order"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
            action = records.action_sync_status()
        </field>
    </record>

    <record id="action_process_orders_server" model="ir.actions.server">
        <field name="name">Process Orders</field>
        <field name="model_id" ref="model_shopify_order"/>
        <field name="binding_model_id" ref="model_shopify_order"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
            action = records.action_process()
        </field>
    </record>

    <record id="action_import_from_shopify_server" model="ir.actions.server">
        <field name="name">Sync Orders from Shopify</field>
        <field name="model_id" ref="model_shopify_order"/>
        <field name="binding_model_id" ref="model_shopify_order"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
            action = env['shopify.order'].action_import_from_shopify()
        </field>
    </record>

    <record id="view_shopify_order_line_inline_tree" model="ir.ui.view">
        <field name="name">shopify.order.line.inline.tree</field>
        <field name="model">shopify.order.line</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="sku"/>
                <field name="title"/>
                <field name="quantity"/>
                <field name="weight"/>
                <field name="requires_shipping"/>
            </list>
        </field>
    </record>
</odoo>


