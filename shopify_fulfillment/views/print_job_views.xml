<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_print_job_tree" model="ir.ui.view">
        <field name="name">print.job.list</field>
        <field name="model">print.job</field>
        <field name="arch" type="xml">
            <list>
                <field name="order_id"/>
                <field name="job_type"/>
                <field name="state" widget="badge" decoration-success="state == 'completed'" decoration-info="state == 'printing'" decoration-danger="state == 'failed'"/>
                <field name="attempts"/>
                <field name="printer_id"/>
                <field name="created_at"/>
                <field name="completed_at"/>
                <button name="action_retry" type="object" string="Retry" icon="fa-refresh" invisible="state != 'failed'"/>
            </list>
        </field>
    </record>

    <record id="view_print_job_form" model="ir.ui.view">
        <field name="name">print.job.form</field>
        <field name="model">print.job</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_retry" type="object" string="Retry" class="btn-primary" invisible="state != 'failed'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="order_id"/>
                        <field name="shipment_id"/>
                        <field name="job_type"/>
                        <field name="attempts"/>
                        <field name="printer_id"/>
                        <field name="zpl_data" widget="text"/>
                        <field name="error_message"/>
                        <field name="created_at"/>
                        <field name="completed_at"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_print_job" model="ir.actions.act_window">
        <field name="name">Print Jobs</field>
        <field name="res_model">print.job</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>


