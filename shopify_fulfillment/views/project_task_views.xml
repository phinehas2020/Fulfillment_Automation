<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_task_form_inherit_shopify" model="ir.ui.view">
        <field name="name">project.task.form.inherit.shopify</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_fulfillment_deduct_inventory" 
                        type="object" 
                        string="Deduct Inventory" 
                        invisible="not is_fulfillment_task or fulfillment_inventory_deducted"
                        class="oe_highlight"/>
            </header>
            <!-- Add a dedicated tab (page) for fulfillment in the notebook -->
            <xpath expr="//notebook" position="inside">
                <page string="Shopify Fulfillment" name="shopify_fulfillment" invisible="not is_fulfillment_task">
                    <group>
                        <group string="Order Info">
                            <field name="is_fulfillment_task" invisible="1"/>
                            <field name="shopify_order_id" readonly="1"/>
                        </group>
                        <group string="Inventory Status">
                            <field name="fulfillment_inventory_deducted" widget="boolean_toggle"/>
                            <button name="action_fulfillment_deduct_inventory" 
                                    type="object" 
                                    string="Retry Deduction" 
                                    invisible="fulfillment_inventory_deducted"
                                    class="btn-secondary"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
