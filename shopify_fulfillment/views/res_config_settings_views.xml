<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.shopify</field>
        <field name="model">res.config.settings</field>
        <field name="priority">99</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Shopify Fulfillment" string="Shopify Fulfillment" data-key="shopify_fulfillment" groups="base.group_system">
                    <h2>Shopify API</h2>
                    <div class="row mt16 o_settings_container" id="shopify_credentials">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="shopify_shop_domain"/>
                                <div class="text-muted">Your Shopify store domain</div>
                                <div class="content-group">
                                    <div class="mt8">
                                        <field name="shopify_shop_domain" placeholder="e.g. mystore.myshopify.com"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="shopify_api_key"/>
                                <div class="text-muted">Shopify Admin API Access Token</div>
                                <div class="content-group">
                                    <div class="mt8">
                                        <field name="shopify_api_key" password="True"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="shopify_webhook_secret"/>
                                <div class="text-muted">Webhook verification secret</div>
                                <div class="content-group">
                                    <div class="mt8">
                                        <field name="shopify_webhook_secret" password="True"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>Shippo Shipping</h2>
                    <div class="row mt16 o_settings_container" id="shippo_credentials">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="shippo_api_key"/>
                                <div class="text-muted">Shippo API Token for shipping labels</div>
                                <div class="content-group">
                                    <div class="mt8">
                                        <field name="shippo_api_key" password="True"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="shipper_phone"/>
                                <div class="text-muted">Shipper phone number for labels</div>
                                <div class="content-group">
                                    <div class="mt8">
                                        <field name="shipper_phone" placeholder="e.g. +1 555-555-5555"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>Print Agent</h2>
                    <div class="row mt16 o_settings_container" id="print_agent_settings">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="print_agent_api_key"/>
                                <div class="text-muted">API Key for print agent authentication</div>
                                <div class="content-group">
                                    <div class="mt8">
                                        <field name="print_agent_api_key" password="True"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="print_agent_max_attempts"/>
                                <div class="text-muted">Maximum retry attempts for print jobs</div>
                                <div class="content-group">
                                    <div class="mt8">
                                        <field name="print_agent_max_attempts"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="print_agent_lease_seconds"/>
                                <div class="text-muted">Job lease duration in seconds</div>
                                <div class="content-group">
                                    <div class="mt8">
                                        <field name="print_agent_lease_seconds"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>Automation</h2>
                    <div class="row mt16 o_settings_container" id="automation_settings">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="fulfillment_auto_process"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="fulfillment_auto_process"/>
                                <div class="text-muted">Automatically process orders when received</div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
